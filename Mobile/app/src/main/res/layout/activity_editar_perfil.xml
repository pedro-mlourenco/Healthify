<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditarPerfilActivity">

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="412dp"
        android:layout_height="76dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/registotop" />

    <Button
        android:id="@+id/btnGoBack"
        android:layout_width="29dp"
        android:layout_height="29dp"
        android:onClick="onClickGoBack"
        android:layout_marginStart="32dp"
        android:background="@drawable/backward_arrow"
        app:layout_constraintBottom_toBottomOf="@+id/imageView8"
        app:layout_constraintStart_toStartOf="@+id/imageView8"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EDITAR PERFIL"
        android:textColor="@color/lisseblue"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imageView8"
        app:layout_constraintTop_toTopOf="@+id/imageView8" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:layout_marginEnd="48dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Nome" />

            <EditText
                android:id="@+id/etNmeroCartaoAdd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/boxedtext"
                android:ems="10"
                android:inputType="text"
                android:minHeight="48dp"
                android:text="Tonny Johnny"
                tools:layout_editor_absoluteX="49dp"
                tools:layout_editor_absoluteY="125dp" />

            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Email" />

            <EditText
                android:id="@+id/eTUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/boxedtext"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:minHeight="48dp"
                android:focusable="false"
                android:text="tonny.mail@testing.com"
                tools:layout_editor_absoluteX="49dp"
                tools:layout_editor_absoluteY="296dp" />

            <TextView
                android:id="@+id/tvPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Password" />

            <EditText
                android:id="@+id/eTPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/boxedtext"
                android:ems="10"
                android:inputType="textPassword"
                android:minHeight="48dp"
                android:text="12345678"
                tools:layout_editor_absoluteX="49dp"
                tools:layout_editor_absoluteY="382dp" />

            <TextView
                android:id="@+id/tvInformacaoPessoal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Informação Pessoal"
                android:textAlignment="center"
                android:textColor="@color/lisseblue"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvDataNasc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Data de Nascimento" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/etData"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:textColor="@color/black"
                    android:background="@drawable/boxedtext"
                    android:ems="10" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2" />

                <Button
                    android:id="@+id/btnCalendar"
                    android:layout_width="30sp"
                    android:layout_height="40sp"
                    android:layout_weight="0.1"
                    android:background="@drawable/calendar"
                    android:scaleType="fitCenter" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvTelemovel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Telemóvel" />

            <EditText
                android:id="@+id/eTTelemovel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/boxedtext"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:minHeight="48dp"
                android:text="960309940"
                tools:layout_editor_absoluteX="49dp"
                tools:layout_editor_absoluteY="382dp" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Cidade" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/etCidade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:textColor="@color/black"
                    android:background="@drawable/boxedtext"
                    android:ems="10" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2" />

                <Spinner
                    android:id="@+id/spinnerCidade"
                    android:layout_width="30sp"
                    android:layout_height="40sp"
                    android:layout_weight="0.1"
                    android:spinnerMode="dialog" />

            </LinearLayout>



            <TextView
                android:id="@+id/tvRua"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Rua" />

            <EditText
                android:id="@+id/eTRua"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/boxedtext"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:minHeight="48dp"
                android:text="Morro do Lena 2"
                tools:layout_editor_absoluteX="49dp"
                tools:layout_editor_absoluteY="382dp" />

            <TextView
                android:id="@+id/tvPorta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Porta" />

            <EditText
                android:id="@+id/eTPorta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/boxedtext"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:minHeight="48dp"
                android:text="45" />

            <TextView
                android:id="@+id/tvAndar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Andar" />

            <EditText
                android:id="@+id/eTAndar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/boxedtext"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:minHeight="48dp"
                android:text="45" />

            <TextView
                android:id="@+id/tvCodPostal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Código-Postal" />

            <EditText
                android:id="@+id/eTCodPostal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/boxedtext"
                android:ems="10"
                android:inputType="text"
                android:minHeight="48dp"
                android:text="2080-544"
                tools:layout_editor_absoluteX="49dp"
                tools:layout_editor_absoluteY="382dp" />

            <TextView
                android:id="@+id/tvNIF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_weight="0.7"
                android:text="NIF" />

            <EditText
                android:id="@+id/eTNIF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:background="@drawable/boxedtext"
                android:ems="10"
                android:inputType="text"
                android:minHeight="48dp"
                android:text="235236235"
                tools:layout_editor_absoluteX="49dp"
                tools:layout_editor_absoluteY="382dp" />

            <Button
                android:id="@+id/btnGuardar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/roundedbutton"
                android:backgroundTint="@color/lisseblue"
                android:text="Guardar"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/btnRegistar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent" />


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>